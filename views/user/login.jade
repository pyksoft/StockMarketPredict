extend ../fragments/_header
append content
    div.loginArea.centerBox
        - for(var prop in message)
            div #{message[prop]}
        div.leftSide
            form(action='/login', method='post')
                h2 Login
                label Email
                    input(type='text', name='email')
                label Password
                    input(type='password', name='password')
                button(type='submit') Login
            p Need an account?
                a(href='/register') Register
        div.rightSide
            p Want to login with something else?
                ul.loginOptions
                    li 
                        a.socialButton.facebookButton(href='/auth/facebook') 
                            i.icon-facebook 
                            | Facebook
                    li 
                        a.socialButton.twitterButton(href='/auth/twitter') 
                            i.icon-twitter 
                            | Twitter
                    li 
                        a.socialButton.googleButton(href='/auth/google') 
                            i.icon-gplus 
                            | Google+
                    li 
                        a.socialButton.linkedInButton(href='/auth/linkedIn') 
                            i.icon-linkedin 
                            | LinkedIn